<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="#8bbcbc">

    <ToggleButton android:id="@+id/vol_lock"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textOff="@string/vol_lock_off"
        android:textOn="@string/vol_lock_on"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <ImageButton android:id="@+id/button1"
        android:src="@drawable/selector"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"/>

    <ImageButton android:id="@+id/button2"
        android:src="@drawable/selector"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:layout_below="@id/button1"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"/>

    <ImageButton android:id="@+id/button3"
        android:src="@drawable/selector"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:layout_below="@id/button2"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"/>

    <ImageButton android:id="@+id/button4"
        android:src="@drawable/selector"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:layout_below="@id/button3"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"/>

    <ImageButton android:id="@+id/button5"
        android:src="@drawable/selector"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:layout_above="@id/button6"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="40dp"
        android:layout_alignRight="@+id/button6"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"/>

    <ImageButton android:id="@+id/button6"
        android:src="@drawable/selector"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:layout_above="@id/button7"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignRight="@+id/button7"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"/>

    <ImageButton android:id="@+id/button7"
        android:src="@drawable/selector"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:layout_above="@id/button8"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignRight="@+id/button8"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"/>

    <ImageButton android:id="@+id/button8"
        android:src="@drawable/selector"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="130dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"/>

    <ImageButton android:id="@+id/button11"
        android:src="@drawable/selector"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="11"
        android:layout_marginBottom="20dp"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"/>

    <ImageButton android:id="@+id/button12"
        android:src="@drawable/selector"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="12"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toLeftOf="@+id/button2" />

</RelativeLayout>